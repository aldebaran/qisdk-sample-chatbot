<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_selector</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
        <item name="android:tint">@color/button_text_color_selector</item>
    </style>
    <style name="suggestionStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/suggestion_background</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="pepperTalkStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/peper_talk_background</item>
        <item name="android:layout_width">550dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>


    <style name="indicationStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/idle_button_background</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textMultiLine</item>
    </style>


</resources>
