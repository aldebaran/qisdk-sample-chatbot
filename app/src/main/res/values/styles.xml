<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_selector</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
        <item name="android:tint">@color/button_text_color_selector</item>
    </style>
    <style name="suggestionStyle">
        <item name="android:fontFamily">"@fonts/OpenSans-Regular"</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>

    <style name="pepperTalkStyle">
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">80sp</item>
        <item name="android:background">@drawable/peper_talk_background</item>
        <item name="android:layout_width">800dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="indicationStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>


</resources>
